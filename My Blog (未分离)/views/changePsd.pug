extends ./layout/layout

block css
  link(rel="stylesheet", href="/css/main.css")
  link(rel="stylesheet", href="/css/changePsd.css")


block contents
  #main
    .layui-container
      .layui-tab.layui-tab-card
        .changePassword 密码修改
        .layui-tab-content
          .layui-tab-item(class="layui-show")
            form(action="/user/changePsd", method="post").layui-form
              .layui-form-item
                label.layui-form-label 原密码
                .layui-input-inline
                  input(type="password", name="oldPassword",  required, lay-verify="required", placeholder="请输入原密码").layui-input
              .layui-form-item
                label.layui-form-label 新密码
                .layui-input-inline
                  input(type="password", name="newPassword",  required, lay-verify="required", placeholder="请输入新密码").layui-input
              .layui-form-item
                label.layui-form-label 确认新密码
                .layui-input-inline
                  input(type="password", name="confirmPWD",  required, lay-verify="required", placeholder="请再次输入新密码").layui-input
              .layui-form-item
                .layui-input-block
                  button(lay-submit, lay-filter="formDemo").layui-btn.layui-btn-normal 确认修改
                  button(type="reset").layui-btn.layui-btn-danger 重置
